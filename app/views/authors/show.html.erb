<p style="color: green"><%= notice %></p>
<h1> Author Information </h1>

<%= turbo_frame_tag @author do %>
  <%= render @author %>

  <ul>
    <% @author.images.each do |image| %>
      <% if image.representable? %>
        <li>
          <%= image_tag image.representation(resize_to_limit: [200, 200]) %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <div>
    <%= link_to "Edit this author", edit_author_path(@author) %>
    <%= button_to "Destroy this author", @author, method: :delete,
                                              data: { turbo_frame: "_top" } %>
    <%= link_to "Back to authors", authors_path, data: { turbo_frame: "_top" } %>
  </div>
<% end %>
