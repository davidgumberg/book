<h2>Authors</h2>

<%= form_with url: search_authors_path, method: :get do |form| %>
  <%= render partial: 'search', locals: {form: form, unique_id: 'index-search'} %>
<% end %>

<div class="authors-index">
  <% @authors.each do |author| %>
    <%= tag.div class: 'author-index-card' do %>
      <%= render author %>
    <% end %>
  <% end %>
</div>

<%= link_to "New author", new_author_path %>
