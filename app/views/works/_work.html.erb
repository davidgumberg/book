<div id="<%= dom_id work %>">
  <% if work.cover_url %>
    <div>
      <img src="<%= work.cover_url %>" />
    </div>
  <% end %>
  <div>
  </div>
  <p>
    <strong>Title:</strong>
    <%= work.title %>
  </p>

  <p>
    <strong>ISBN:</strong>
    <%= work.ISBN %>
  </p>

  <p>
    <strong>Date published:</strong>
    <%= work.date_published %>
  </p>

</div>
